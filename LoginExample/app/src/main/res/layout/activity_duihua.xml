<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sample.event.lisi.loginexample.Activity.DuihuaActivity">


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <EditText
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:hint="输入服务器IP地址 "
            android:text="10.0.3.2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connect"
            android:layout_weight="0.4"
            android:text="连接 "/>
    </LinearLayout>
    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.86"
        android:layout_above="@+id/editReady"
        android:layout_below="@+id/linearLayout">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/textReady"
            android:text="Ready....."/>
    </ScrollView>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editReady"
        android:hint="在这里输入内容"
        android:layout_above="@+id/sendReady" />
    <Button
        android:id="@+id/sendReady"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="发送"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
